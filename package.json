{
  "name": "factory-monorepo",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "npm run dev:game",
    "dev:game": "npm run dev -w apps/game",
    "dev:tools": "npm run dev -w apps/tools",
    "build": "npm run build:game",
    "build:game": "npm run build -w apps/game",
    "build:tools": "npm run build -w apps/tools",
    "lint": "eslint . --max-warnings=0",
    "prettier": "prettier --write .",
    "test": "npm run test -w apps/game",
    "prepare": "husky"
  },
  "lint-staged": {
    "apps/game/**/*.{js,ts,jsx,tsx}": [
      "eslint --max-warnings=0",
      "prettier --write"
    ],
    "apps/tools/**/*.{js,ts,jsx,tsx}": [
      "eslint --max-warnings=0",
      "prettier --write"
    ],
    "*.{json,css,md}": "prettier --write"
  },
  "devDependencies": {
    "eslint": "^9",
    "eslint-config-next": "16.1.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.7.4",
    "typescript": "^5",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}