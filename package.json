{
  "name": "factory-monorepo",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "npm run dev:game",
    "dev:game": "npm run dev -w apps/game",
    "dev:tools": "npm run dev -w apps/tools",
    "build": "npm run build:game",
    "build:game": "npm run build -w apps/game",
    "build:tools": "npm run build -w apps/tools",
    "lint": "npm run lint -w apps/game",
    "test": "npm run test -w apps/game"
  },
  "devDependencies": {
    "prettier": "^3.0.0"
  }
}